{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "crons": [
      {
        "path": "/api/cron-jobs/trigger",
        "schedule": "0 0 * * *"
      }
    ]
  }
